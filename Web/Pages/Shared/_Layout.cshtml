<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - News</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />

    <link href="~/lib/fontawesome-free-6.5.2-web/css/fontawesome.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-6.5.2-web/css/brands.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-6.5.2-web/css/solid.css" rel="stylesheet" />

    <link href="~/css/btnWeatherCollapse.css" rel="stylesheet" />
    @RenderSection("Styles", false);
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar mt-2">
            <div class="container-fluid px-5">
                <a class="navbar-brand d-flex gap-1" asp-area="" asp-page="/Index" style="align-items: center;">
                    <img src="/images/brand-logo.png" width="30" height="30" /> <span class="text-white fw-bold">Micropop Start</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <div class="navbar-nav flex-grow-1 justify-content-end gap-2">
                        <partial name="/Components/ButtonWeatherCollapse.cshtml" />
                        <div class="nav-item navbar-btn p-0">
                            <a class="nav-link text-white py-1 px-2 fs-5 h-100 d-flex align-items-center" asp-area="" asp-page="/Settings">
                                <i class="fa-solid fa-gear"></i>
                            </a>
                        </div>
                        <div class="nav-item navbar-btn p-0">
                            <a class="nav-link text-white py-1 px-2 fs-5 h-100 d-flex align-items-center" asp-area="" asp-page="/Notifications">
                                <i class="fa-solid fa-bell"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="~/js/ButtonWeatherCollapse/buttonWeatherCollapse.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 